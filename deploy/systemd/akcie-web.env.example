# Environment file for akcie-web unit (systemd)
# Copy to: /etc/akcie-web.env

# REQUIRED in production
SECRET_KEY=change-me-to-a-long-random-secret

# Optional logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Optional Flask dev runner settings (Gunicorn ignores these)
FLASK_DEBUG=0
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
